{% extends 'GemeenteAmsterdamBrievenhulpBundle:master:modal.html.twig' %}

{% block modal %}

    <div class="modal-wrapper">
        {{ form_start(form, {'attr': {'class': 'form', 'action': path('gemeenteamsterdam_brievenhulp_hulpverlener_deletecomplete', {'hulpvraagUuid':hulpvraag.uuid})} }) }}
        <div class="form-row">
            <label class="text-h3">Beschrijf kort waarom je deze vraag verwijdert.
